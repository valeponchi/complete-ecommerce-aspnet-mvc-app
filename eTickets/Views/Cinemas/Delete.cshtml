@*model*@
@model Cinema

@*viewData*@
@{
    ViewData["Title"] = "Delete Cinema";
}

@*HTML Code*@
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" readonly />
                        @*in case no-validation we will show a msg: *@
                        <span asp-validation-for="Logo" class="text-danger"> </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly/>
                        @*in case no-validation we will show a msg: *@
                        <span asp-validation-for="Name" class="text-danger"> </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        @*in case no-validation we will show a msg: *@
                        <span asp-validation-for="Description" class="text-danger"> </span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete" >
                            <input type="hidden" asp-for="Id" /> @*needed to pass the Id as param*@
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@*JS CODE - JQuery*@

@*section named Scripts*@
@section Scripts{
<script>
    //when the doc is ready
    $(document).ready(function() {
         var output = document.getElementById('logoPreview');
        output.src = $("#Logo").val();
    })
</script>
}
